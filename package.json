{
  "name": "groundlevel-es6-firebase",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akauppi/groundlevel-es6-firebase-web.git"
  },
  "author": "<akauppi@gmail.com>",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=14.3"
  },
  "scripts": {
    "test": "npm run ci",
    "ci": "npm run ci:seq",
    "---": "",
    "ci:seq": "firebase emulators:exec --project=bunny --config firebase.json --only firestore,functions \"npm run _ci_init && npm run _ci_fns && npm run _ci_rules\"",
    "_ci_init": "node --harmony-top-level-await back-end/test/prime-docs.js",
    "_ci_fns": "npx --node-arg=--experimental-vm-modules jest --config back-end/test-fns/jest.config.cjs --verbose --detectOpenHandles",
    "_ci_rules": "npx --node-arg=--experimental-vm-modules jest --config back-end/test-rules/jest.config.cjs --verbose --detectOpenHandles",
    "ci:par": "firebase emulators:exec --project=bunny --config firebase.json --only firestore,functions \"npm run _ci_par_2\"",
    "_ci_par_2": "concurrently -n test-fns,test-rules \"npm run _ci_init && npm run _ci_fns\" \"npm run _ci_rules\"",
    "---  ": "",
    "start:back-end": "concurrently -n emul,init \"firebase emulators:start --project=bunny --config firebase.json --only functions,firestore\" \"GCLOUD_PROJECT=bunny npm run _start_2\"",
    "_start_2": "wait-on http://localhost:4000 && node --harmony-top-level-await back-end/test/prime-docs.js",
    "test:fns:callables": "GCLOUD_PROJECT=bunny npx --node-arg=--experimental-vm-modules jest --config back-end/test-fns/jest.config.cjs -f callables.test.js",
    "test:fns:monitoring": "GCLOUD_PROJECT=bunny npx --node-arg=--experimental-vm-modules jest --config back-end/test-fns/jest.config.cjs -f monitoring.test.js",
    "test:fns:userInfo": "GCLOUD_PROJECT=bunny npx --node-arg=--experimental-vm-modules jest --config back-end/test-fns/jest.config.cjs -f userInfo.test.js --detectOpenHandles",
    "test:fns:all": "GCLOUD_PROJECT=bunny npx --node-arg=--experimental-vm-modules jest --config back-end/test-fns/jest.config.cjs --verbose --detectOpenHandles",
    "---   ": "",
    "test:rules:invites": "npx --node-arg=--experimental-vm-modules --node-arg=--harmony-top-level-await jest --config back-end/test-rules/jest.config.cjs -f invitesC.test.js --verbose --detectOpenHandles",
    "test:rules:projects": "npx --node-arg=--experimental-vm-modules --node-arg=--harmony-top-level-await jest --config back-end/test-rules/jest.config.cjs -f projectsC.test.js --verbose --detectOpenHandles",
    "test:rules:symbols": "npx --node-arg=--experimental-vm-modules --node-arg=--harmony-top-level-await jest --config back-end/test-rules/jest.config.cjs -f symbolsC.test.js --verbose --detectOpenHandles",
    "test:rules:userInfo": "npx --node-arg=--experimental-vm-modules --node-arg=--harmony-top-level-await jest --config back-end/test-rules/jest.config.cjs -f userInfoC.test.js --verbose --detectOpenHandles",
    "test:rules:visited": "npx --node-arg=--experimental-vm-modules --node-arg=--harmony-top-level-await jest --config back-end/test-rules/jest.config.cjs -f visitedC.test.js --verbose --detectOpenHandles",
    "test:rules:all": "npx --node-arg=--experimental-vm-modules --node-arg=--harmony-top-level-await jest --config back-end/test-rules/jest.config.cjs --verbose --detectOpenHandles",
    "---    ": "",
    "test:app": "echo \"Sorry, no application tests yet! 🙁\" && false",
    "lint": "eslint --ext .js,.vue src",
    "---     ": "",
    "dev": "npm run dev:local",
    "dev:local": "firebase emulators:exec --project=app --ui --only functions,firestore \"npm run _dev_local_2\"",
    "_dev_local_2": "node --experimental-json-modules ./local/init.js && npx vite --port 3000 --mode dev_local",
    "dev:online": "tools/hasActiveProject.sh && vite --port 3001",
    "---      ": "",
    "prod:rollup:build": "rollup -c rollup.config.prod.js",
    "prod:rollup:serve": "firebase serve --only hosting --port 3010",
    "_prod_rollup_clean": "(rm public/dist/* 2> /dev/null || true)",
    "---       ": "",
    "//prod:vite:build": "vite build",
    "//prod:vite:serve": "npm run //prod:vite:build && npx http-server dist",
    "---        ": "",
    "prod:deploy:hosting": "firebase deploy --only hosting",
    "prod:deploy:fns": "firebase deploy --only functions",
    "prod:deploy:rules": "firebase deploy --only firestore",
    "prod:deploy:all": "firebase deploy",
    "---         ": "",
    "preprod:rollup:build": "npm run _prod_rollup_clean",
    "preprod:rollup:serve": "npm run prod:rollup:build"
  },
  "//scripts": {
    "//dev:local": "concurrently -n emul,dev-local \"firebase emulators:start --only functions,firestore\" \"npm run _dev_local_2\"",
    "//_dev_local_2": "wait-on http://localhost:4000 && node --experimental-json-modules ./local/init.js && npx vite --port 3000 --mode dev_local"
  },
  "dependencies": {
    "firebase": "^7.19.1",
    "vue": "^3.0.0-rc.10",
    "vue-router": "^4.0.0-beta.9"
  },
  "//dependencies": {
    "//firebaseui": "^4.5.1"
  },
  "devDependencies": {
    "@akauppi/firebase-jest-testing": "0.0.1-alpha.10",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-replace": "^2.3.3",
    "@vue/compiler-sfc": "^3.0.0-rc.10",
    "concurrently": "^5.3.0",
    "eslint": "^7.8.1",
    "eslint-plugin-vue": "^7.0.0-beta.3",
    "firebase-admin": "^9.1.1",
    "jest": "^26.4.2",
    "jest-circus": "^26.4.2",
    "rollup": "^2.26.10",
    "rollup-plugin-scss": "^2.6.0",
    "rollup-plugin-terser": "^7.0.1",
    "rollup-plugin-vue": "^6.0.0-beta.10",
    "sass": "^1.26.10",
    "vite": "1.0.0-rc.4",
    "vue-eslint-parser": "^7.1.0",
    "wait-on": "^5.2.0"
  },
  "//devDependencies": {
    "//@rollup/plugin-alias": "^3.1.0",
    "//@rollup/plugin-commonjs": "^11.0.1",
    "//rollup-plugin-filesize": "^9.0.2"
  },
  "//comments": {
    "devDependencies": {
      "@vue/compiler-sfc": [
        "This needs to be the same version as 'dependencies.vue' but did not find a way to ",
        "enforce that. Tried '$npm_package_dependencies_vue' but that doesn't work. npm 6.14.4 on macOS."
      ],
      "rollup-plugin-scss": [
        "Needed only as an antidote, until 'rollup-plugin-vue' does things right.",
        "See -> https://github.com/vuejs/rollup-plugin-vue/issues/322#issuecomment-586371970"
      ]
    },
    "scripts": {
      "build": [
        "Builds production code.",
        "Linting is separated from 'npm run build' intentionally. CI/CD can easily do them both (as it should) but",
        "for developer being able to run them separately is considered good."
      ]
    },
    "engines": [
      "'>=14.3' for '—harmony-top-level-await'",
      "'>=13.2' for ES module support"
    ]
  }
}
