{
  "firestore": {
    "rules": "back-end/firestore.rules",
    "indexes": "back-end/firestore.indexes.json"
  },
  "functions": {
    "source": "back-end/functions"
  },
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "//": [
          "Non-existing '.html' and postfix-less fetches should lead to SPA index. Missing maps, js etc. should show as 404.",
          "",
          "tbd. Test this by:",
          "  /common.css -> 200",
          "  /nosuch.js -> 404",
          "  /some -> 200 (index.prod.html)",
          "  /some.html -> 200",
          "  /dist/main.{hash}.js.map (that exists) -> 200"
        ],
        "source": "!**/*.@(css|js|map)",
        "destination": "/index.prod.html"
      }
    ]
  },
  "emulators": {
    "firestore": {
      "port": "6767"
    },
    "functions": {
      "port": "5002"
    }
  }
}
