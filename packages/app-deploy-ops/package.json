{
  "name": "@local/app-deploy-ops",
  "description": "Sample front end (deployment & operations)",
  "license": "MIT",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=14.3"
  },
  "scripts": {
    "test": ">&2 echo \"No tests here. Tests are run in development projects (../app and ../backend).\"; false",
    "lint": "eslint src",
    "  -": "",
    "build:vite": "vite build -c vite/vite.config.js",
    "build:roll": "rm -rf roll/out/* && rollup -c roll/rollup.config.mjs",
    "  - ": "",
    "serve:vite": "firebase serve --config firebase.vite.json --only hosting --host 0.0.0.0 --port 3012",
    "serve:roll": "...",
    "  ---": "",
    "deploy:vite": "firebase deploy --config firebase.vite.json --only hosting",
    "deploy:roll": "firebase deploy --config firebase.roll.json --only hosting",
    "  - -": "",
    "preserve:vite": "npm run --silent _prepare_vite",
    "preserve:roll": "npm run --silent _prepare_roll",
    "predeploy:vite": "npm run --silent _prepare_vite",
    "predeploy:roll": "npm run --silent _prepare_roll",
    "_prepare_vite": "KIND=vite npm run --silent _prepare_kind",
    "_prepare_roll": "KIND=roll npm run --silent _prepare_kind",
    "_prepare_kind": "cat firebase.json | sed \"s/\\$SERVE_PATH/$KIND\\/out/\" > firebase.$KIND.json",
    " - - --": "",
    "postserve:vite": "rm -f firebase.*.json",
    "postserve:roll": "rm -f firebase.*.json",
    "postdeploy:vite": "rm -f firebase.*.json",
    "postdeploy:roll": "rm -f firebase.*.json",
    "  - - ": "",
    "//prebuild": "(cd ../app && npm run build)",
    "prewatch:vite": "PORT=3012 npm run --silent _checkPortIsFree",
    "prewatch:roll": "PORT=3012 npm run --silent _checkPortIsFree && npm run build",
    "_checkPortIsFree": "../app/tools/port-is-free.sh $PORT || ( >&2 echo \"ERROR: Port '$PORT' is taken!\n\"; exit 6)",
    "  -  ": "",
    "--dev:vite": "vite serve -c vite/vite.config.js --port 3012",
    "--dev:roll": "rollup -w tbd..",
    "//_clean": "(rm dist/* 2> /dev/null || true)",
    "//preserve": "npm run --silent _checkFirebaseActiveProj",
    "//_checkFirebaseActiveProj": "[[ $(firebase use | cat) != *\"No active project\"* ]] || ( >&2 echo \"ERROR: No active project. Please run 'firebase use <alias>' or 'firebase use --add'.\n\"; exit 1)"
  },
  "dependencies": {
    "@local/app": "file:../app",
    "firebase": "0.900.15"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@rollup/plugin-replace": "^2.4.1",
    "concurrently": "^6.0.0",
    "eslint": "^7.21.0",
    "rollup": "^2.41.0",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-visualizer": "^4.2.0",
    "vite": "^2.0.5",
    "wait-on": "^5.2.1"
  },
  "//comments": {
    "scripts": {
      "prebuild": [
        "May be used to build '../app' but this slows down integration development so might not be the best way. tbd."
      ]
    },
    "dependencies": {
      "firebase": [
        "See 'APPROACH.md' for discussion of this trick. Required for 'firebase/performance', so it's not burdening",
        "the \"app\" side."
      ],
      "[@]rollup...": [
        "Needed for '[build|serve]:rollup'"
      ],
      "vite": [
        "Needed for '[build|serve]:vite'"
      ]
    },
    "engines.node": [
      "'>=14.3' for 'â€”harmony-top-level-await'",
      "'>=13.2' for ES module support"
    ]
  }
}
